{
  "_comment": "Simple Packer Template using Amazon Linux 2018.03",
  "variables": 
    {
      "aws_access_key": "{{env `aws_access_key`}}",
      "aws_secret_key": "{{env `aws_secret_key`}}",
      "build": "{{env `Build`}}"
    },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-west-2",
      "source_ami": "ami-a0cfeed8",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "HelloWorld Linux Build-{{user `build`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo yum update -y",
        "sudo yum install java-1.8.0 java-1.8.0-openjdk-devel awslogs -y"
      ]
    },
    { "type": "file",
      "destination": "/tmp/",
      "source": "awslogs.conf"
    },
    { "type": "file",
      "destination": "/tmp/",
      "source": "awscli.conf"
    },
    { "type": "shell",
      "inline": [
        "sudo mv /tmp/awslogs.conf /etc/awslogs/",
	"sudo mv /tmp/awscli.conf /etc/awslogs/",
        "sudo service awslogs start",
        "sudo chkconfig awslogs on"
  ]
} 
